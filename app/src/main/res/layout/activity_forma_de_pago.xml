<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_layout"
    android:orientation="vertical"
    tools:context="itonmb.mobilesd.itonmb.forma_de_pago">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Realizar Pago"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <Spinner
                    android:id="@+id/spi_forma_pago"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:prompt="@string/formas_de_pago"
                    android:spinnerMode="dialog"
                    android:textColor="@color/colortxt"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="10dp" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Importe:"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/txt_monto_forma_pago"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/dollar"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:focusable="false"
                    android:paddingTop="20dp"
                    android:textAlignment="textEnd"
                    android:textSize="36sp" />


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Recibido:"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/txt_recibido_forma_pago"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/dollar"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName|number"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spi_comprobante"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginRight="20dp"
                    android:prompt="@string/comprobante"
                    android:spinnerMode="dialog"
                    android:textColor="@color/colortxt"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="10dp" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Descuento:"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/txt_descuento_forma_pago"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/porcent"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName|number"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Cambio:"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/txt_cambio_forma_pago"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/dollar"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:focusable="false"
                    android:paddingTop="20dp"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textSize="36sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Total a pagar:"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/txt_total_pago_upgrade_fp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:focusable="false"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_cancelar_upgrade"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorbtncancelar"
            android:text="CANCELAR"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_pagar_upgrade"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="#0cb759"
            android:text="PAGAR"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>
