<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_layout"
    android:orientation="vertical"
    tools:context="itonmb.mobilesd.itonmb.cerrar_caja">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_cc_inicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caja inicial:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_caja_inicial_cierre"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:elevation="0dp"
                android:hint="00.00"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lbl_cc_v_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:text="Venta del dÃ­a:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_venta_dia"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:hint="00.00"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_cc_libros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caja de libros:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_caja_libro"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:elevation="0dp"
                android:hint="00.00"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lbl_cc_diferencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:text="Diferencia:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_diferencia"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:hint="00.00"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caja Final USD:"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/txt_monto_final_usd"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="50dp"
                android:ems="14"
                android:hint="00.00"
                android:inputType="number"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="245dp"
                android:text="Caja Final MXN:"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/txt_monto_final_mxn"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"
                android:ems="14"
                android:hint="00.00"
                android:inputType="number"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_billetes"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/fondo_layout"
                android:drawableRight="@drawable/popup"
                android:paddingLeft="50dp"
                android:text="Billetes"
                android:textAlignment="textStart"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_monedas"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@color/fondo_layout"
                android:drawableRight="@drawable/popup"
                android:paddingLeft="50dp"
                android:text="Monedas"
                android:textAlignment="textStart"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_btn_caja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_canc_cierra_caja"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@color/colorbtncancelar"
                android:text="CANCELAR"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn_conf_cierra_caja"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:text="CONFIRMAR"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
