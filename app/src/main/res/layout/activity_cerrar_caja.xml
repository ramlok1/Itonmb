<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_layout"
    android:orientation="vertical"
    tools:context="itonmb.mobilesd.itonmb.cerrar_caja">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_cc_inicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caja inicial:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lbl_caja_inicial_cierre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:elevation="0dp"
                android:text="$ 1,000.00"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lbl_cc_v_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:text="Venta del dÃ­a:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lbl_venta_dia_cierre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="$ 0.00"
                android:textColor="@android:color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_cc_libros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caja de libros:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:elevation="0dp"
                android:text="$ 1,000.00"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lbl_cc_diferencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:text="Diferencia:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="$ 0.00"
                android:textColor="@android:color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/txt_total_cc_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:ems="14"
                android:focusable="false"
                android:text="$ 1,000.00"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/txt_lbl_cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="290dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:ems="14"
                android:focusable="false"
                android:textColor="@android:color/black"
                android:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_txt_caja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_caja_final"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:ems="14"
                android:hint="Caja final"
                android:inputType="number"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/spin_arqueo"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:entries="@array/arqueo_array"
                android:prompt="@string/list_t_arqueo"
                android:spinnerMode="dialog"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_list_denom_cierre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/fondo_layout"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spin_denom_cierre"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:entries="@array/billete_array"
                android:prompt="@string/list_caja_prompt"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_list_moneda_cierre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/fondo_layout"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spin_moneda_cierre"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:entries="@array/moneda_array"
                android:prompt="@string/list_caja_prompt"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_list_bill_cierre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/fondo_layout"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spin_bill_cierre"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:entries="@array/moneda_array"
                android:prompt="@string/list_caja_prompt"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_btn_caja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_conf_cierra_caja"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@color/colorbtncancelar"
                android:text="CANCELAR"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn_canc_cierra_caja"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:text="CONFIRMAR"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
