<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tview_cupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.57"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tview_agencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tview_tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tview_adulto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tview_nino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tview_infante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tview_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tview_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tview_habi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_obs_ver"
        android:layout_width="37dp"
        android:layout_height="20dp"
        android:layout_weight="2"
        android:background="@android:color/background_light"
        android:elevation="0dp"
        android:text="Ver"
        android:textColor="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/tview_importe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_flag"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/espa" />

    <Button
        android:id="@+id/btn_status"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/abordar" />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/menu"
        android:elevation="1dp" />
</LinearLayout>