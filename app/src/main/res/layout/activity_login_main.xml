<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantalla"
    tools:context="itonmb.mobilesd.itonmb.login_main"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_img"
            android:layout_marginLeft="300dp"
            android:layout_marginRight="300dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/background_light">

            <EditText
                android:id="@+id/txt_login_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/txt_login_pass"
                android:backgroundTint="@color/colory"
                android:drawableStart="@drawable/user_img"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_user"
            android:layout_marginLeft="300dp"
            android:layout_marginRight="300dp"
            android:textColorHint="@android:color/background_light">

            <EditText
                android:id="@+id/txt_login_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_login_user"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:backgroundTint="@color/colory"
                android:drawableStart="@drawable/pass_img"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/chk_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/til_pass"
            android:layout_below="@+id/til_pass"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Guardar contraseña"
            android:buttonTint="@color/colory"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btn_login_entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/til_pass"
            android:layout_alignStart="@+id/chk_login"
            android:layout_below="@+id/chk_login"
            android:background="@color/colory"
            android:text="ENTRAR" />

        <TextView
            android:id="@+id/tview_bien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="BIENVENIDO"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="76sp" />

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tview_bien"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/logo_iton" />

</RelativeLayout>
