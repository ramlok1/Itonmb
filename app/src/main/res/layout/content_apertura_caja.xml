<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_layout"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="itonmb.mobilesd.itonmb.apertura_caja">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lay_txt_caja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_caja_final"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="14"
                android:hint="Caja final"
                android:inputType="number"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/txt_init_caja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorfondo"
                android:ems="14"
                android:hint="Caja inicial"
                android:inputType="number"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/spin_arqueo"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:entries="@array/arqueo_array"
                android:prompt="@string/list_t_arqueo"
                android:spinnerMode="dialog"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_list_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/fondo_layout"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spin_billete"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:entries="@array/billete_array"
                android:prompt="@string/list_caja_prompt"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_list_moneda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/fondo_layout"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spin_moneda"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:entries="@array/moneda_array"
                android:prompt="@string/list_caja_prompt"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_btn_caja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_conf_ac"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:text="CONFIRMAR"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn_canc_ac"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                android:background="@color/colorbtncancelar"
                android:text="CANCELAR"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
