<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_item_barco_abordar"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/tview_nombre_barco_abordar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:textAlignment="textStart"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tview_cap_barco_abordar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tview_book_barco_abordar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tview_abordar_barco_abordar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/chk_sel_abordar"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginRight="50dp" />

</LinearLayout>